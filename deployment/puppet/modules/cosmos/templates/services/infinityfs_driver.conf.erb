include "cluster-properties"

"core" {
    "properties" {
        "fs.infinity.impl" = "es.tid.cosmos.infinity.InfinityFileSystem",
        "fs.infinity.defaultAuthority" = ${InfinityMasterNode}":<%= scope.lookupvar('cosmos::params::infinity_server_port') %>",
        "fs.infinity.ssl.enabled" = "false",
        "fs.infinity.clusterSecret" = ${ClusterSecret}
    }
}

"services" = [{
    "configType"="infinity-driver"
    "properties" {
      "blocked_ports" = "8088,8032,50060,19888"
    }
}]
