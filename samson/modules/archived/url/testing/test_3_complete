# Some cleaning
#rm /opt/samson/config/samsonPlatformProcesses


# Running inside build/testing
#/usr/local/bin/samsonLocal -working . -f test_3_complete_commands.txt >test_3_complete_stdout 2>test_3_complete_stderr
if [ -n "${CONTROLLER_IP:+x}" ]; then
        echo "Environment variable CONTROLLER_IP defined to: " $CONTROLLER_IP > test_3_complete_stdout
        if [ $CONTROLLER_IP = "localhost" ]; then
                if ! ps -C samsonSpawner > /dev/null
                then
                        echo "Launching samsonSpawner" >> test_3_complete_stdout
                        samsonSpawner  >> test_3_complete_stdout &
                else
                        echo "samsonSpawner already running" >> test_3_complete_stdout
                fi
                sleep 3
        fi
        /usr/local/bin/delilah -controller $CONTROLLER_IP -f test_3_complete_commands.txt >> test_3_complete_stdout 2> test_3_complete_stderr
else
        echo "Environment variable CONTROLLER_IP not defined, using samsonLocal" > test_3_complete_stdout
        /usr/local/bin/samsonLocal -working . -f test_3_complete_commands.txt >> test_3_complete_stdout 2> test_3_complete_stderr
fi


sort -n -o test_3_complete_out.txt out.txt
rm -f out.txt
#rm data/*

#Compare the produced output with the expected output
diff  test_3_complete_out.txt test_3_complete_expected_out.txt
