# Some cleaning
#rm /opt/samson/config/samsonPlatformProcesses


# Running inside build/testing
#/usr/local/bin/samsonLocal -working . -f test_2_complete_commands.txt >test_2_complete_stdout 2>test_2_complete_stderr
if [ -n "${CONTROLLER_IP:+x}" ]; then
        echo "Environment variable CONTROLLER_IP defined to: " $CONTROLLER_IP > test_2_complete_stdout
        if [ $CONTROLLER_IP = "localhost" ]; then
                if ! ps -C samsonSpawner > /dev/null
                then
                        echo "Launching samsonSpawner" >> test_2_complete_stdout
                        samsonSpawner  >> test_2_complete_stdout &
                else
                        echo "samsonSpawner already running" >> test_2_complete_stdout
                fi
                sleep 3
        fi
        /usr/local/bin/delilah -controller $CONTROLLER_IP -f test_2_complete_commands.txt >> test_2_complete_stdout 2> test_2_complete_stderr
else
        echo "Environment variable CONTROLLER_IP not defined, using samsonLocal" > test_2_complete_stdout
        /usr/local/bin/samsonLocal -working . -f test_2_complete_commands.txt >> test_2_complete_stdout 2> test_2_complete_stderr
fi


export LANG=C
cat out.txt | sort -k 3nr > test_2_complete_out.txt
rm -f out.txt

#Compare the produced output with the expected output
diff  test_2_complete_out.txt test_2_complete_expected_out.txt
