#
# Kill worker
#
echo "all curl commands sent - now killing samsonWorker"
sleep .2
curl localhost:1202/samson/die.json  > json/die.json 2> /dev/null
sleep .2

#
# Is samsonWorker really dead?
#
curl localhost:1202/samson/version.json > json/should_be_empty.json 2> /dev/null
if [ "$?" == "0" ]
then
    echo samsonWorker doesn\'t seem to have died after sending it the DIE REST Request ...
    exit 2
fi


