#for mach in samson01 samson02 samson03 samson04 samson05 samson06 samson07 samson08
#for mach in samson01 samson02 samson03 samson04 samson05
#for mach in samson01 samson02 samson03
for mach in samson02 samson03 

do
	echo Installing samson in $mach
	rsync -r /opt/samson/etc              samson@$mach:/opt/samson
	rsync -r /opt/samson/modules          samson@$mach:/opt/samson
	rsync -r /opt/samson/bin  	      samson@$mach:/opt/samson/bin
done
