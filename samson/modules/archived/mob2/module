##    Get a sample of around 10000 cdrs    ##
#############################################
map get_sample_10000
{
	in system.UInt cdr.mobCdr
	out system.UInt cdr.mobCdr
	
	help
	{	
		"Extract a sample of around 10000 clients"
	}
}

